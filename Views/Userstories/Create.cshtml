@model KanbanBoardMandatoryV2.Models.Userstory


<div class="card">
    <div class="card-body">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Create new User Story...</label>
                <input asp-for="Title" class="form-control" placeholder="Enter the userstory title..." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" placeholder="Enter the userstory description..." />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estimation" class="control-label"></label>
                <input asp-for="Estimation" class="form-control" placeholder="Enter the estimation of the userstory..." />
                <span asp-validation-for="Estimation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <input asp-for="Priority" class="form-control" placeholder="Enter the priority of the userstory..."/>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserStatus" class="control-label"></label>
                <select asp-for="UserStatus" class="form-control">
                    @foreach (var state in Enum.GetValues(typeof(UserStatus)))
                    {
                        <option>@state</option>
                    }
                </select>
                <span asp-validation-for="UserStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

